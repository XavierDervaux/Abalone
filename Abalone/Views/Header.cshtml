@using Abalone.Models;
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Abalone @ViewData["titre"]</title>
        <link rel="icon" type="image/png" href="@Url.Content("~/Ressources/style/img/favicon.png")">
        <link rel="stylesheet" href="@Url.Content("~/Ressources/style/bootstrap.min.css")">
        <link rel="stylesheet" href="@Url.Content("~/Ressources/style/style.css")">

        <script type="text/javascript" src="@Url.Content("~/Ressources/js/jquery-3.1.1.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Ressources/js/bootstrap.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Ressources/js/abalone.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Ressources/js/socket.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Ressources/js/partie.js")"></script>
    </head>

    <body>
        <header>
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/Home">
                            <img src="@Url.Content("~/Ressources/style/img/logo_header.png")" width="140" />
                        </a>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right">
                            @if(@ViewData["joueur"] != null){
                                <li><a>Bienvenue @(((Joueur)ViewData["joueur"]).Pseudo)</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>